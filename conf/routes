# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       	Application.index
GET     /login										Application.sforceLogin
GET		/logout										Application.sforceLogout

# Permission set comparisons
GET		/permsetDiffs/{id1}/{id2}/{id3}/{id4}/getUserPerms	Application.userPermDiffs
GET		/permsetDiffs/{id1}/{id2}/{id3}/{id4}/getObjPerms	Application.objectPermDiffs

# Main page functions
GET 	/{item}/get									Application.get{item}

# Ignore favicon requests
GET 	/favicon.ico 	staticFile:/public/images/favicon.png 

# Map static resources from the /app/public folder to the /public path
GET     /public/                                	staticDir:public
GET     /resources/                                	staticDir:resources

# Catch all
*       /{controller}/{action}                  	{controller}.{action}